{
  "manifest_version": 3,
  "name": "Phishing Shield - AI URL Protection",
  "version": "2.0",
  "description": "Real-time phishing detection using AI with offline capabilities",
  
  "permissions": [
    "activeTab",
    "tabs",
    "storage"
  ],
  
  "host_permissions": [
    "https://*.onrender.com/*",
    "http://*/*",
    "https://*/*"
  ],
  
  "background": {
    "service_worker": "js/background.js"
  },
  
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["js/content.js"],
      "css": ["css/content.css"],
      "run_at": "document_start"
    }
  ],
  
  "web_accessible_resources": [
    {
      "resources": ["css/*", "history.html"],
      "matches": ["<all_urls>"]
    }
  ],
  
  "action": {
    "default_popup": "popup.html",
    "default_title": "Phishing Shield",
    "default_icon": {
      "16": "icons/icon16.svg",
      "48": "icons/icon48.svg",
      "128": "icons/icon128.svg"
    }
  },
  
  "icons": {
    "16": "icons/icon16.svg",
    "48": "icons/icon48.svg",
    "128": "icons/icon128.svg"
  }
}
